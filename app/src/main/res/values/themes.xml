<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DogCuisine" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主题色保留现有主辅色 -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/teal_200</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">#F5F5F0</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">#4A4A4A</item>
        <item name="colorOutline">#D4D4D4</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowBackground">?attr/colorSurface</item>

        <!-- 全局控件风格：使用 Material3；CardView 使用兼容样式避免缺失 -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
        <item name="toolbarStyle">@style/Widget.DogCuisine.Toolbar</item>
    </style>

    <style name="Theme.DogCuisine.Splash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_ic_launcher_inset</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/purple_500</item>
        <item name="postSplashScreenTheme">@style/Theme.DogCuisine</item>
    </style>

    <style name="Widget.DogCuisine.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="subtitleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
