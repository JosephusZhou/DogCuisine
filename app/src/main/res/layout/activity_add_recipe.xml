<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.DogCuisine.Toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsvAddRecipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingBottom="96dp">

                <com.dogcuisine.ui.SquareFrameLayout
                    android:id="@+id/flCover"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center_horizontal"
                    android:background="?attr/colorSurfaceVariant"
                    android:foregroundGravity="center">

                    <ImageView
                        android:id="@+id/ivCover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/add_cover" />

                    <TextView
                        android:id="@+id/tvCoverHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/add_cover"
                        android:textColor="#6B7280"
                        android:textStyle="bold" />
                </com.dogcuisine.ui.SquareFrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="菜谱名称"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/recipe_name_hint"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:padding="12dp"
                    android:background="#F9FAFB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="菜谱分类"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827" />

                <Spinner
                    android:id="@+id/spCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:background="#F9FAFB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="食材"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <EditText
                            android:id="@+id/etIngredientText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="64dp"
                            android:minLines="3"
                            android:hint="请输入食材文字（可选）"
                            android:background="@android:color/transparent"
                            android:textColor="#111827"
                            android:textSize="15sp"
                            android:padding="8dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:id="@+id/llIngredientImages"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" />
                        </HorizontalScrollView>

                        <Button
                            android:id="@+id/btnAddIngredientImages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/add_images"
                            android:backgroundTint="@color/purple_500"
                            android:textColor="@color/teal_200" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="步骤"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSteps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnAddStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:text="@string/add_step"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/teal_200" />

    </FrameLayout>

</LinearLayout>
