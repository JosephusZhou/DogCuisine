<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DogCuisine">

        <activity
            android:name=".ui.AddRecipeActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.DogCuisine" />

        <activity
            android:name=".ui.CategoryManageActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.DogCuisine" />

        <activity
            android:name=".ui.SearchRecipeActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.DogCuisine" />

        <activity
            android:name=".ui.WebDavSyncActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.DogCuisine" />

        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DogCuisine.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.RecipeDetailActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.DogCuisine" />

    </application>

</manifest>
